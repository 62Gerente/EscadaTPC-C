    <file>
      <source>src/main/resources/log4j.xml</source>
      <outputDirectory>/etc</outputDirectory>
    </file>
    <file>
      <source>src/main/resources/database-config.properties</source>
      <outputDirectory>/etc</outputDirectory>
    </file>
    <file>
      <source>src/main/resources/tpcc-config.properties</source>
      <outputDirectory>/etc</outputDirectory>
    </file>
  </files>

  <fileSets>
    <fileSet>
      <outputDirectory>/</outputDirectory>
      <directory>src/main/bin</directory>
    </fileSet>
  </fileSets>

